@model IQueryable<ProductListItemDTO>

<div class="container">
    <div class="row mb-2">
        <h3>Products</h3>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <a class="btn btn-success" asp-action="Create">Create new product</a>
        </div>        
    </div>
    <div class="row">
        @if(Model.Count() > 0)
        {
            <table class="table table-bordered table-striped w-100">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Categories)
                        </th>
                        <th></th>                        
                    </tr>
                </thead>
                <tbody>
                    @foreach(var product in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => product.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.Categories)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@product.Id">Info</a>
                            </td>                            
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>
                Products do not exist!
            </div>
        }

    </div>
</div>
